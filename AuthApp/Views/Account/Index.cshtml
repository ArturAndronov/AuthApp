@{
    ViewData["Title"] = "Вход или регистрация";
}

<div class="container auth-container">
    <div class="card auth-card">
        <div class="text-center mb-4">
            <img src="~/images/logo.png" alt="Логотип" class="auth-logo" />
            <h2 class="mt-3">Вход или регистрация</h2>
        </div>
        <div class="d-grid gap-2">
            <a asp-action="Login" class="btn btn-primary">Войти</a>
            <a asp-action="Register" class="btn btn-secondary">Создать аккаунт</a>
        </div>
    </div>
</div>
