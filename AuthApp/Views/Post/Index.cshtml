@model IEnumerable<AuthApp.Models.Post>

<h2>Посты</h2>

<a asp-action="Create">Создать пост</a>

@foreach (var post in Model)
{
    <div>
        <h3>@post.Title</h3>
        <p>@post.Content</p>
        <form asp-action="Delete" asp-route-id="@post.Id" method="post">
            <button type="submit">Удалить</button>
        </form>
    </div>
}